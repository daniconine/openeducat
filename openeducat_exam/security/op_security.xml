<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Categorías del módulo -->
        <record model="ir.module.category" id="module_category_all_op_exam">
            <field name="name">Exam</field>
            <field name="description">Helps you manage your institute's exam-related users and actions.</field>
            <field name="sequence">108</field>
            <field name="parent_id" eval="False"/>
        </record>

        <!-- Grupos de usuarios -->
        <record id="group_op_exam_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_all_op_exam"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_op_exam_admin" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_all_op_exam"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_op_exam_user'))]"/>
        </record>

        <!-- Reglas de seguridad para examenes y resultados -->
        <record model="ir.rule" id="student_exam_result_rule">
            <field name="name">Student Exam Result</field>
            <field name="model_id" ref="model_op_exam_result"/>
            <field name="groups" eval="[(4, ref('group_op_exam_user'))]"/>
            <field name="domain_force">['|', ('student_id.user_id','=',user.id),
                ('student_id.user_id','in',user.child_ids.ids)]
            </field>
        </record>

        <record model="ir.rule" id="admin_exam_result_rule">
            <field name="name">Admin Exam Result</field>
            <field name="model_id" ref="model_op_exam_result"/>
            <field name="groups" eval="[(4, ref('group_op_exam_admin'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record model="ir.rule" id="student_exam_rule">
            <field name="name">Student Exam</field>
            <field name="model_id" ref="model_op_exam"/>
            <field name="groups" eval="[(4, ref('group_op_exam_user'))]"/>
            <field name="domain_force">['|', ('responsible_id.user_id','=',user.id),
                ('responsible_id.user_id','in',user.child_ids.ids)]
            </field>
        </record>

        <record model="ir.rule" id="admin_exam_rule">
            <field name="name">Admin Exam</field>
            <field name="model_id" ref="model_op_exam"/>
            <field name="groups" eval="[(4, ref('group_op_exam_admin'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</odoo>
