<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <data> 
        <template id="portal_final_grades" name="Portal Final Grades">
                <t t-call="website.layout">
                    <div class="container">
                        <h2>Notas Finales</h2>
                        <t t-if="final_grades">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Asignatura</th>
                                        <th>Nota Final</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="final_grades" t-as="grade">
                                        <tr>
                                            <td><t t-esc="grade.subject_id.name"/></td>
                                            <td><t t-esc="grade.final_score"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-if="not final_grades">
                            <p>No tienes notas finales disponibles por el momento.</p>
                        </t>
                    </div>
                </t>
            </template>

            <template id="no_student_found" name="No Student Found">
                <t t-call="website.layout">
                    <div class="container">
                        <h2>Error</h2>
                        <p><t t-esc="message"/></p>
                    </div>
                </t>
            </template>

            <template id="no_grades_found" name="No Grades Found">
                <t t-call="website.layout">
                    <div class="container">
                        <h2>Notas no disponibles</h2>
                        <p><t t-esc="message"/></p>
                    </div>
                </t>
            </template>
        </data>
    </odoo>