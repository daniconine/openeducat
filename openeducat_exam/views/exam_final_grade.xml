<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <!-- Vista Tree para Nota Final -->
       <record id="view_op_final_grade_tree" model="ir.ui.view">
        <field name="name">op.final.grade.tree</field>
        <field name="model">op.final.grade</field>
        <field name="arch" type="xml">
            <tree string="Nota Final">
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="final_score"/>
                
            </tree>
        </field>
        </record>

        <!-- Vista Form para Nota Final -->
        <record id="view_op_final_grade_form" model="ir.ui.view">
            <field name="name">op.final.grade.form</field>
            <field name="model">op.final.grade</field>
            <field name="arch" type="xml">
                <form string="Nota Final">
                    <sheet>
                        <group>
                            <field name="student_id"/>
                            <field name="subject_id"/>
                            <field name="final_score"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- AcciÃ³n para ver las Notas Finales -->
        <record model="ir.actions.act_window" id="act_open_op_final_grade_view">
            <field name="name">Notas Finales</field>
            <field name="res_model">op.final.grade</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_op_final_grade_tree"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
