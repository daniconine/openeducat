<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_exam_result_tree" model="ir.ui.view">
            <field name="name">op.exam.result.tree</field>
            <field name="model">op.exam.result</field>
            <field name="arch" type="xml">
                <tree string="Resultados de Exámenes">
                    <field name="student_id"/>
                    <field name="exam_id"/>
                    <field name="score"/>
                </tree>
            </field>
        </record>
        
        <record id="view_op_exam_result_form" model="ir.ui.view">
            <field name="name">op.exam.result.form</field>
            <field name="model">op.exam.result</field>
            <field name="arch" type="xml">
                <form string="Resultado de Examen">
                    <sheet>
                        <group>
                            <field name="student_id"/>
                            <field name="exam_id"/>
                            <field name="score"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_op_exam_result_search" model="ir.ui.view">
            <field name="name">op.exam.result.search</field>
            <field name="model">op.exam.result</field>
            <field name="arch" type="xml">
                <search string="Buscar Resultados de Exámenes">
                    <field name="student_id"/>
                    <field name="exam_id"/>
                    <field name="score"/>
                </search>
            </field>
        </record>

               
        <record model="ir.actions.act_window" id="act_open_op_exam_result_view">
            <field name="name">Resultados de Exámenes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.exam.result</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_exam_result_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        


    </data>
</odoo>
