<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       
        <record id="view_op_subject_kanban" model="ir.ui.view">
            <field name="name">op.subject.kanban</field>
            <field name="model">op.subject</field>
            <field name="arch" type="xml">
                <kanban string="Asignaturas">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="cycle"/>
                    <field name="faculty_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <strong><t t-esc="record.name.value"/></strong>
                                <div>
                                    <span><t t-esc="record.code.value"/></span>
                                </div>
                                <div>
                                    <span><t t-esc="record.cycle.value"/></span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        

        <record id="view_op_subject_tree" model="ir.ui.view">
            <field name="name">op.subject.tree</field>
            <field name="model">op.subject</field>
            <field name="arch" type="xml">
                <tree string="Asignaturas">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="cycle"/>
                    <field name="faculty_ids"/>                    
                </tree>
            </field>
        </record>

        <!-- Vista de formulario (form) para Asignaturas -->
        <record id="view_op_subject_form" model="ir.ui.view">
            <field name="name">op.subject.form</field>
            <field name="model">op.subject</field>
            <field name="arch" type="xml">
                <form string="Asignaturas">
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="cycle"/>
                        <field name="faculty_ids"/> 
                        <field name="exam_ids"/>                     
                    </group>
                </form>
            </field>
        </record>

        <!-- AcciÃ³n para ver todas las Asignaturas -->
        <record model="ir.actions.act_window" id="act_open_op_subject_view">
            <field name="name">Asignaturas</field>
            <field name="res_model">op.subject</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_op_subject_kanban"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


    </data>
</odoo>
