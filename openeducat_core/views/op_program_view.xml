<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Vista en árbol para Programas -->
        <record id="view_op_program_tree" model="ir.ui.view">
            <field name="name">op.program.tree</field>
            <field name="model">op.program</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Programas">
                    <field name="name"/>
                    <field name="term_structure" optional="hide"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para Programas -->
        <record id="view_op_program_form" model="ir.ui.view">
            <field name="name">op.program.form</field>
            <field name="model">op.program</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Programa">
                    <header>
                        <field name="create_boolean" invisible="1"/>
                        <button name="term_create" type="object" string="Crear Ciclos" class="oe_highlight"
                                attrs="{'invisible': ['|',('create_boolean', '!=', False), ('term_structure', '==', 'otros')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="term_structure"/>
                                <field name="end_date"/>
                                <field name="company_id" groups="base.group_multi_company" optional="show"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ciclos Académicos" name="academic_term_ids">
                                <field name="academic_term_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Búsqueda para Programas -->
        <record id="view_op_program_search" model="ir.ui.view">
            <field name="name">op.program.search</field>
            <field name="model">op.program</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Programas">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </search>
            </field>
        </record>

        <!-- Acción para ver Programas -->
        <record model="ir.actions.act_window" id="act_op_program_view">
            <field name="name">Programas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.program</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_program_search"/>
        </record>

        <!-- Vista en formulario para la acción Programas -->
        <record model="ir.actions.act_window.view" id="act_op_program_view_form">
            <field name="act_window_id" ref="act_op_program_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_program_form"/>
        </record>

        <!-- Vista en árbol para la acción Programas -->
        <record model="ir.actions.act_window.view" id="act_op_program_view_tree">
            <field name="act_window_id" ref="act_op_program_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_program_tree"/>
        </record>
    </data>
</odoo>
